<%- include('partials/header') %>

  <div class="jumbotron text-center">
    <div class="container">
      <img src="images/hush-icon.jpg">
      <h1 class="display-3">Hush! Keep it secret!</h1>
      <hr>

      <% usersWithSecrets.forEach(user=> { user.secret.forEach(secret => { %>
        <p class="secret-text">
          <%=secret%>
        </p>
        <% })}) %>


          <hr>
          <a class="btn btn-light btn-lg btn-logout" href="/logout" role="button">Log Out</a>
          <a class="btn btn-dark btn-lg btn-submit" href="/submit" role="button">Submit a Secret</a>
    </div>
  </div>

  <%- include('partials/footer') %>